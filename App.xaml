<Application x:Class="WpfAppCEFSharpBrowser1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppCEFSharpBrowser1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Colours-->
        <SolidColorBrush x:Key="wbBackground" Color="#1C0C5B" />
        <SolidColorBrush x:Key="wbSecondaryBack" Color="#3D2C8D" />
        <SolidColorBrush x:Key="wbYellow" Color="#916BBF" />
        <SolidColorBrush x:Key="wbGrey" Color="#916BBF" />
        <SolidColorBrush x:Key="wbText" Color="#B05E27" />

        <!--Custom Elements-->
        <Style x:Key="wbMenuItem" TargetType="MenuItem">
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Foreground" Value="{StaticResource wbGrey}" />
        </Style>

        <Style x:Key="wbSubMenuItem" TargetType="MenuItem">
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Foreground" Value="{StaticResource wbText}" />
        </Style>
    </Application.Resources>
</Application>
